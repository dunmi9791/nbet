<odoo>
  <data>

   <record id="view_travel_details_tree" model="ir.ui.view">
            <field name="name">travel.details.tree</field>
            <field name="model">travel.details</field>
            <field name="arch" type="xml">
                <tree string="Travel Details" create="true" delete="true" editable="bottom">

                    <field name="location" />
                    <field name="allowance"/>
                    <field name="rates"/>
                    <field name="days"/>
                    <field name="total"/>



                </tree>
            </field>
        </record>
      <record id="view_travel_request_form" model="ir.ui.view">
        <field name="name">travelrequest.form</field>
        <field name="model">travel_advance.nbet_process</field>
        <field name="arch" type="xml">
            <form string="Travel Advance Request" duplicate="0">
                <header>
                    <button name="travel_advance_request" type="object" string="Request Travel Advance" class="oe_highlight" states="draft"/>
                    <button name="travel_advance_approve" type="object" string="Approve travel advance" class="oe_highlight"  states="Requested"/>
                    <button name="travel_advance_fin_approve" type="object" string="Financial Approval" class="oe_highlight" states="HOD Approve"/>
                    <button name="travel_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="Requested" />
                    <button name="travel2_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="HOD Approve" />

                    <button name="process" string="Process" class="oe_highlight" states="Fin Approve"  type="object"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,Requested,Approved,Rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
<!--                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>-->
                            </button>
                        </div>
                    <group>
                <group>
                <field name="request_date"/>
                <field name="request_no"/>
                <field name="traveller_name"/>
                <field name="travel_date"/>

                </group>
                    <group>

                    </group>
                    </group>


                    <notebook>
                    <page string="Travel Details">
                        <field name="travel_details_ids" >
                        </field>



                    </page>
                    </notebook>
                    <group>
                    <field name="amount_total"/>
                        <field name="justification"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
      </record>
      <record id="view_advance_details_tree" model="ir.ui.view">
            <field name="name">advance.details.tree</field>
            <field name="model">advance_details.ebs</field>
            <field name="arch" type="xml">
                <tree string="Staff Advance Details" create="true" delete="true" editable="bottom">

                    <field name="description" />
                    <field name="amount"/>


                </tree>
            </field>
        </record>
      <record id="view_staff_advance_form" model="ir.ui.view">
        <field name="name">staff_advance.form</field>
        <field name="model">advance_request.ebs</field>
        <field name="arch" type="xml">
            <form string="Staff Advance Request" >
                <header>
                    <button name="staff_advance_request" type="object" string="Request Staff Advance" class="oe_highlight" states="draft"/>
                    <button name="staff_advance_hod_approve" type="object" string="Staff advance HOD Approve" class="oe_highlight"  states="Requested"/>
                    <button name="staff_advance_fc_approve" type="object" string="FC Approval" class="oe_highlight" states="HOD Approve"/>
                    <button name="staff_advance_cfo_approve" type="object" string="CFO Approval" class="oe_highlight" states="FC Approve"/>
                    <button name="staff_advance_ceo_approve" type="object" string="CEO Approval" class="oe_highlight" states="CFO Approve"/>
                    <button name="staff_advance_cfo_forward" type="object" string="CFO Forward" class="oe_highlight" states="CEO Approve"/>
                    <button name="staff_advance_input_details" type="object" string="Input Details" class="oe_highlight" states="CFO Forward"/>
                    <button name="staff_advance_review_details" type="object" string="Confirm Details" class="oe_highlight" states="Input Details"/>
                    <button name="staff_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="Requested" />
                    <button name="staff2_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="HOD Approve" />
                    <button name="staff3_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="FC Approve" />
                    <button name="staff4_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="CFO Approve" />
                    <button name="staff5_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="CEO Approve" />

                    <button name="process" string="Process" class="oe_highlight" states="Review Details"  type="object"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,Requested,Approved,Rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
<!--                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>-->
                            </button>
                        </div>
                    <group>
                <group>
                    <field name="request_no"/>
                    <field name="memo_to"/>


                </group>
                    <group>
                        <field name="date"/>
                         <field name="purpose"/>

                    </group>
                    </group>
                    <group>
                        <group>

                        </group>
                        <group string="Voucher Details">
                            <field name="payee_id" />

                        </group>
                    </group>


                    <notebook>
                    <page string="Advance Details">
                        <field name="advance_details_ids" >
                        </field>



                    </page>

                    </notebook>
                    <group>
                    <field name="amount_total" widget="monetary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
      </record>


      <record id="view_payment_voucher_form" model="ir.ui.view">
        <field name="name">paymentvoucher.form</field>
        <field name="model">payment_voucher.ebs</field>
        <field name="arch" type="xml">
            <form string="Payment Voucher" duplicate="0">
                <header>
                    <button name="payment_voucher_request" type="object" string="Submit Voucher" class="oe_highlight" states="draft"/>
                    <button name="payment_voucher_prepare" type="object" string="FC Sign off " class="oe_highlight"  states="Prepared"/>
                    <button name="voucher_cfo_approve" type="object" string="CFO Approval" class="oe_highlight" states="FC Sign Off"/>
                    <button name="travel_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="Prepared" />
                    <button name="travel2_advance_reject" type="object" string="Reject Request" class="oe_highlight" states="FC Sign Off" />
                    <button name="payment_voucher_process" type="object" string="Process Voucher" class="oe_highlight" states="CFO Approval"/>

                    <button name="process" string="Process" class="oe_highlight" states="Fin Approve"  type="object"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,Requested,Approved,Rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
<!--                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>-->
                            </button>
                        </div>
                    <group>
                <group>

                    <field name="originating_memo"/>
                    <field name="voucher_type"/>


                <field name="voucher_no"/>

                </group>
                    <group>

                        <field name="amount" widget="monetary"/>
                        <field name="mode_payment" domain="[('type', 'in', ('bank', 'cash'))]" />


                    </group>

                    </group>


                    <notebook>
                    <page string="Voucher Details">
                        <field name="voucher_details_ids" >
                        </field>



                    </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
      </record>
      <record id="view_voucher_details_tree" model="ir.ui.view">
            <field name="name">voucher.details.tree</field>
            <field name="model">voucher_details.ebs</field>
            <field name="arch" type="xml">
                <tree string="Voucher Details" create="true" delete="true" editable="bottom">

                    <field name="date" />
                    <field name="name" />
                    <field name="details"/>
                    <field name="rate"/>


                </tree>
            </field>
        </record>
      <record id="view_payment_voucher_kanban" model="ir.ui.view">
       <field name="name">payment voucher kanban view</field>
        <field name="model">payment_voucher.ebs</field>
       <field name="arch" type="xml">
          <kanban>
              <field name="voucher_no"/>

              <templates>
                 <t t-name="kanban-box">
                     <div t-attf-class="oe_kanban_global_click">


                           <p><h4><field name="originating_memo"/></h4></p>

               </div>
                    </t>
       </templates>

       </kanban>
       </field>
      </record>

      <record id="view_payment_mandate_form" model="ir.ui.view">
        <field name="name">paymentmandate.form</field>
        <field name="model">payment_mandate.ebs</field>
        <field name="arch" type="xml">
            <form string="Payment Mandate" duplicate="0">
                <header>
                    <button name="payment_mandate_forward" type="object" string="Submit Mandate" class="oe_highlight" states="draft"/>
                    <button name="payment_mandate_review" type="object" string="FC Review" class="oe_highlight"  states="Forward"/>
                    <button name="payment_mandate_cfo_review" type="object" string="CFO Review" class="oe_highlight" states="FC Review"/>
                    <button name="payment_mandate_reject" type="object" string="Reject Mandate" class="oe_highlight" states="Forward" />
                    <button name="payment_mandate_reject2" type="object" string="Reject Mandate" class="oe_highlight" states="FC Review" />
                    <button name="payment_mandate_reject3" type="object" string="Reject Mandate" class="oe_highlight" states="CFO Review" />
                    <button name="payment_mandate_approve" type="object" string="Approve Mandate" class="oe_highlight" states="CFO Review"/>

                    <button name="process" string="Process" class="oe_highlight" states="Fin Approve"  type="object"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,Requested,Approved,Rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="hr.group_hr_user" class="oe_stat_button" icon="fa-archive">
<!--                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>-->
                            </button>
                        </div>
                    <group>
                <group>
                    <field name="mandate_no"/>
                    <field name="date"/>
                    <field name="amount" widget="monetary"/>
                    <field name="description"/>
                    <field name="mode"/>


                </group>
                    <group>
                        <field name="mandate_ref"/>
                        <field name="payee_id"/>
                        <field name="account_no"/>
                        <field name="bank"/>
                        <field name="account_name"/>

                    </group>

                    </group>




                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
      </record>
      <record id="disco_invoicing_view_form" model="ir.ui.view">
          <field name="name">disco_invoicing_view_form</field>
          <field name="model">disco_invoicing.ebs</field>
          <field name="arch" type="xml">
              <form string="disco_invoicing_form">
                  <sheet>
                      <group>
                          <field name="name"/>

                      </group>
                      <group>


                            <field name="month"/>
                            <field name="year"/>

                    </group>
                  </sheet>
              </form>
          </field>
      </record>
      <record id="voucher_type_view_form" model="ir.ui.view">
          <field name="name">voucher_type_view_form</field>
          <field name="model">voucher_type.ebs</field>
          <field name="arch" type="xml">
              <form string="voucher_type_form">
                  <sheet>
                      <group>
                      <group>
                          <field name="name"/>
                          <field name="account_id"/>
                          <field name="analytic_account_id"/>

                      </group>
                      <group>

                      </group>
                      </group>
                  </sheet>
              </form>
          </field>

      </record>



  </data>
</odoo>
